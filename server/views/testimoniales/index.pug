extends ../layout/index
block contenido
    main.container.mt-5
        h1.text-center.mb-5=pagina

        
        .row
            .col-md-12

                .row.justify-content-center
                    .col-md-8
                        form(action="/testimoniales", method="POST")
                            .form-group
                                label(for="nombre") Nombre
                                input(id="nombre", class="form-control", type="text", placeholder="Tu Nombre", name="nombre")
                            .form-group
                                label(for="correo") Correo Eletrónico
                                input(id="correo", type="email", class="form-control", placeholder="Tu Correo Electrónico", name="correo")
                            .form-group
                                label(for="mensaje") Mensaje
                                textarea#mensaje(name="mensaje", rows="10", placeholder="Tu Mensaje", class="form-control")
                            input.btn.btn-success.btn-block(type="submit", value="Agregar")