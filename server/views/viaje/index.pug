extends ../layout/index
block contenido
    main.container.mt-5
        .row
            .col-md-5
                img.img-fluid(src=`/img/destinos_${viaje.imagen}_ln.jpg`, alt="Imagen de viaje")
            .col-md-7
                h1= viaje.titulo
                p
                    i.fas.fa-calendar-alt
                    |  Fecha de ida: #{viaje.fecha_ida} - Fecha de vuelta: #{viaje.fecha_vuelta}
                p
                    i.fas.fa-dollar-sign
                    |  #{viaje.precio} ARS
                p
                    i.fas.fa-users
                    |  #{viaje.disponibles} Disponibles
                p=viaje.descripcion